@model HoliDayRental.Models.BienOptions.BienOptionsDetails

@{
    ViewData["Title"] = "Details";
}

<div style="margin-left:10%; margin-right:10%; height:100%;">
    <div style="height:100%;">
        <h3><strong>@Html.DisplayFor(model => model.DescCourte)</strong></h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Photo)
            </dt>
            <dd class="col-sm-10">
                <img width="200" src="~/images/assets/@Html.DisplayFor(model => model.Photo)" alt="Photo bien" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescLong)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescLong)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombrePerson)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombrePerson)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.idPays)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.payses.Libelle) , @Html.DisplayFor(model => model.Ville) <br />
                @Html.DisplayFor(model => model.Rue), @Html.DisplayFor(model => model.Numero) <br />
                zip:  @Html.DisplayFor(model => model.CodePostal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AssuranceObligatoire)
            </dt>
            @if (Model.AssuranceObligatoire == false)
            {
                <dd class="col-sm-10">  NO </dd>
            }
            else
            {
                <dd class="col-sm-10">  OUI : 5€ par jour </dd>
            }

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.options)
            </dt>
            <dd class="col-sm-10">__________________________________________________________________________________</dd>
        </dl>
        @foreach (var option in Model.options)
        {
            <div class="row">

                <span class="col-sm-2">@option.Libelle</span>
                @if (@option.idOption == 2)
                {
                    <span class="col-sm-5"><img src="~/images/icones/lavelinge.png" style="width:40px" /></span>
                    <span class="col-sm-5">@option.Valeur</span>
                }

                else if (@option.idOption == 3)
                {
                    <span class="col-sm-5"><img src="~/images/icones/lavevaisselle.png" style="width:40px" /></span>
                    <span class="col-sm-5">@option.Valeur</span>
                }

                else
                {
                    <span class="col-sm-5"><img src="@string.Concat("/images/icones/", @option.Libelle.ToLower().ToString().Split(' ')[0], ".png")" style="width:40px" /></span>
                    <span class="col-sm-5">@option.Valeur</span>
                }
            </div>
            <hr />
        }

    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
